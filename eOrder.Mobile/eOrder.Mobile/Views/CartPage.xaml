<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="eOrder.Mobile.Views.CartPage"
             xmlns:vm="clr-namespace:eOrder.Mobile.ViewModels">
    <ContentPage.BindingContext>
        <vm:CartViewModel></vm:CartViewModel>
    </ContentPage.BindingContext>
    <ContentPage.Content>

        

        <StackLayout Orientation="Vertical">
            <Button
                                        Text="Details"
                                        HorizontalOptions="CenterAndExpand"
                                        BackgroundColor="LightSeaGreen"
                                        TextColor="White"
                                        Clicked="InitiateOrders"
                                    ></Button>
            <Label
                HorizontalOptions="CenterAndExpand"
                Text="There are no items!"
                IsVisible="{Binding IsEmpty}">
            </Label>

            <ListView 
                HorizontalOptions="CenterAndExpand"
                ItemsSource="{Binding CartOrders}"
                  HasUnevenRows="True"  >
                <ListView.ItemTemplate
                    HorizontalOptions="CenterAndExpand">
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <StackLayout>
                                    <Label
                                    HorizontalOptions="CenterAndExpand">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="Ordered from "/>
                                                <Span FontAttributes="Bold" Text="{Binding Organization.Name}" FontSize="16" TextColor="LightSeaGreen" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <StackLayout
                                    HorizontalOptions="CenterAndExpand">
                                        <Label
                                    HorizontalOptions="CenterAndExpand">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="Total "/>
                                                    <Span FontAttributes="Bold" Text="{Binding Total}" FontSize="16" TextColor="LightSeaGreen" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <Button
                                        Text="Order"
                                        HorizontalOptions="CenterAndExpand"
                                        BackgroundColor="LightSeaGreen"
                                        TextColor="White"
                                        BindingContext="{Binding Id}"
                                        Clicked="InitiateOrder"
                                    ></Button>
                                        <Button
                                        Text="Details"
                                        HorizontalOptions="CenterAndExpand"
                                        BackgroundColor="LightSeaGreen"
                                        TextColor="White"
                                        BindingContext="{Binding Id}"
                                        Clicked="Details"
                                    ></Button>
                                    </StackLayout>
                                    <BoxView HeightRequest="3" BackgroundColor="LightSeaGreen" />
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>


    </ContentPage.Content>
</ContentPage>